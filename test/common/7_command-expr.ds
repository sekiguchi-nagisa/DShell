# variable expand
var a = "`echo hello world`"
var c1 = "`echo $a`"
assert($a == $c1)

var c2 = "$(echo "he${"ll" + "o"} world")"
assert($c2 == "hello world")

# command substitution
var d = `ls`
var i = 0;
for($file in $(ls)) {
	assert($file == $d[$i])
	$i++
}

var d2 = "`echo $(echo hello   world    )`"
assert($d2 == "hello world")


$d2 = "`echo \`echo hello   world    \``"
assert($d2 == '`echo hello world `')

$d2 = "$(echo $(echo hello   world    ))"
assert($d2 == 'hello world')

$d2 = "$(echo `echo hello   world    `)"
assert($d2 == 'hello world')
